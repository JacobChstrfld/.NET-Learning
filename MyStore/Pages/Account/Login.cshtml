@page
@model MyStore.Pages.Account.LoginModel
@{
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyStore</title>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/MyStore.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<br />
<h2>Login</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dissmissible fade in" role="alert">
        <strong>@Model.errorMessage</strong>
        <a href="#" class="close" data-bs-dismiss="alert" aria-label="close">&times;</a>
    </div>
}
<form method="POST">
    <div class="container-fixed" align="left" style="margin:0; padding:0px; max-width: 1000px">
        <div class="form-group" style="max-width: 400px;">
            <label for="exampleInputEmail1">Email address</label>
            <input type="text" class="form-control" name="email" aria-describedby="emailHelp" placeholder="Email" value="@Model.user.email">
        </div>
        <div class="form-group mx-auto" style="max-width: 400px;">
            <label for="password">Password</label>
            <input type="password" class="form-control" name="password" placeholder="Password" value="@Model.user.password">
        </div>
    </div>

    


     @if (Model.successMessage.Length > 0)
        {
            <div class="row mb-3">
                <div class="col-sm-9">
                    <div class="alert alert-success alert-dismissible fade in">
                        <strong>@Model.successMessage</strong>
                        <a href="#" class="close" data-bs-dismiss="alert" aria-label="close">&times;</a>
                    </div>
                </div>
            </div>
        }

    <div class="container-button">
        <div class="form-row" style="width: 400px;">
            <div class="col-xs-2" style="padding-right:5px;">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
            <div class="col-xs-2">
                <a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
            </div>
         </div>
    </div>

</form>

<script src="~/js/custom.js"></script>
