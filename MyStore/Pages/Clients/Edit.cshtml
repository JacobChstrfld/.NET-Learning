@page
@model MyStore.Pages.Clients.EditModel
@{
}
<br />
<h2>Edit Client</h2>

@if (Model.errorMessage.Length > 0)
{
   <div class="alert alert-warning alert-dissmissible fade in" role="alert">
        <strong>@Model.errorMessage</strong>
        <a href="#" class="close" data-bs-dismiss="alert" aria-label="close">&times;</a>
   </div>
}
<form method="POST">
    <div class="container-fixed" align="left" style="margin:0; padding:0px; max-width: 1000px">
        <div class="form-group mx-auto" style="max-width: 400px;">
            <label for="exampleName">Name</label>
            <input type="text" maxlength="4" class="form-control" name="name" placeholder="Name" value="@Model.clientInfo.name">
        </div>
        <div class="form-group" style="max-width: 400px;">
            <label for="exampleInputEmail1">Email address</label>
            <input type="text" class="form-control" name="email" aria-describedby="emailHelp" placeholder="Email" value="@Model.clientInfo.email">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group" style="max-width: 400px;">
            <label for="exampleName">Phone</label>
            <input type="text" class="form-control" name="phone" placeholder="Phone" value="@Model.clientInfo.phone">
        </div>
        <div class="form-group" style="max-width: 400px;">
            <label for="exampleName">Address</label>
            <input type="text" class="form-control" name="address" placeholder="Address" value="@Model.clientInfo.address">
        </div>
    </div>

     @if (Model.successMessage.Length > 0)
        {
            <div class="row mb-3">
                <div class="col-sm-9">
                    <div class="alert alert-success alert-dismissible fade in">
                        <strong>@Model.successMessage</strong>
                        <a href="#" class="close" data-bs-dismiss="alert" aria-label="close">&times;</a>
                    </div>
                </div>
            </div>
        }

 
    <div class="container-button">
        <div class="form-row" style="width: 400px;">
            <div class="col-xs-2" style="padding-right:5px;">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
            <div class="col-xs-2">
                <a class="btn btn-outline-primary" href="/Index" role="button">Cancel</a>
            </div>
         </div>
    </div>
    

</form>

<script src="~/js/custom.js"></script>